@{
    ViewData["Title"] = "Privacy Policy";
}




<div class="header-container">
    <h1>Submit Your Claim</h1>
</div>

<div class="form-container">
    <div class="form-section">
        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
            <p>Please enter the details for your claim:</p>

            <input type="text" name="lecturer_id" placeholder="Lecturer ID" required />
            <input type="text" name="coordinator_id" placeholder="Coordinator ID" required />
            <input type="text" name="manager_id" placeholder="Manager ID" required />
            <input type="date" name="submissionDate" placeholder="Submission Date" required />
            <input type="number" name="hoursWorked" placeholder="Hours Worked" step="0.1" required />

            <select name="claimStatus">
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
            </select>

            <p>Select the document you want to upload:</p>
            <input type="file" name="file" required />

            <button type="submit">Submit Claim</button>
        </form>
    </div>
</div>